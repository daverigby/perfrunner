# Falco workload scaled down to 1/256th of the original.
# (i.e. same per-vBucket) workload if using just 4 vBuckets).

[test_case]
test = perfrunner.tests.kv.MixedLatencyTest
title = [Falco] 99th latency (ms): 7M x 1KB docs, 50/50 r/w, 14K ops/sec
summary = Falco 99th percentile latency test, 7M x 1KB docs, 50/50 r/w, 14K ops/sec
percentile = 99
larger_is_better = false

[stats]
interval = 2

[cluster]
mem_quota = 73728
initial_nodes = 1
num_buckets = 1
num_vbuckets = 4

[compaction]
db_percentage = 100

[bucket]
# Run expiry pager every 50 seconds.
exp_pager_stime = 50

[load]
items = 50000000
size = 100
workers = 80

[access]
creates = 0
reads = 50
updates = 50
deletes = 0
# Set a TTL for 0.5% of updates.
expiration = 0.005
throughput = 14000
items = 50000000
size = 100
workers = 5
time = 300
